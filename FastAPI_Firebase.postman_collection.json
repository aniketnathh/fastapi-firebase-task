  "item": [
    {
      "name": "Signup",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n    \"email\": \"user1@gmail.com\",\n    \"password\": \"test123\",\n    \"full_name\": \"Test User\"\n}"
        },
        "url": {
          "raw": "http://127.0.0.1:8000/signup",
